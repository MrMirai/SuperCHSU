<Window x:Class="CSLB5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSLB5"
        mc:Ignorable="d"
        Title="SuperCHSU" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" MaxWidth="220"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Width="Auto" Height="Auto" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#EDE5E5" Offset="1" />
                    <GradientStop Color="White" Offset="0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Grid Grid.Column="0" Margin="10,10,5,10" >
            <Border Background="White" BorderBrush="#CFCFCF" BorderThickness="3.5,0,0,3.5" CornerRadius="5"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*" MinHeight="60"/>
                    <RowDefinition Height="5*"/>
                </Grid.RowDefinitions>

                <Image Margin="10" Grid.Row="0" Source="Images\ЧГУ_лого_рус_гориз_прозрачный фон.png" Stretch="Uniform"/>
                <Grid Grid.Row="1" Margin="0">
                    <StackPanel Margin="12,10,10,0">
                        <Button Margin="0,10,0,0" TextBlock.FontSize="16" TextBlock.FontWeight="DemiBold"  Content="Юля" Height="25" BorderThickness="0" Background="#E31E24" Foreground="White" >
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12.5"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Margin="0,10,0,0" TextBlock.FontSize="16" TextBlock.FontWeight="DemiBold"  Content="Арина" Height="25" BorderThickness="0" Background="#E31E24" Foreground="White" >
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12.5"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Margin="0,10,0,0" TextBlock.FontSize="16" TextBlock.FontWeight="DemiBold"  Content="Настя" Height="25" BorderThickness="0" Background="#E31E24" Foreground="White" >
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12.5"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Margin="0,10,0,0" TextBlock.FontSize="16" TextBlock.FontWeight="DemiBold"  Content="Кирилл" Height="25" BorderThickness="0" Background="#E31E24" Foreground="White" >
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12.5"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Margin="0,10,0,0" TextBlock.FontSize="16" TextBlock.FontWeight="DemiBold"  Content="Юра" Height="25" BorderThickness="0" Background="#E31E24" Foreground="White" >
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12.5"></Setter>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Margin="5,10,10,10">
            <Border Background="White" BorderBrush="#CFCFCF" BorderThickness="3.5,0,0,3.5" CornerRadius="5"/>
        </Grid>

    </Grid>
    
</Window>
